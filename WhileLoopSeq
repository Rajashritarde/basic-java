package Loop;

import java.util.Scanner;

public class WhileLoopSeq {
	public static void main(String[] args) {
		
		//odd no
		int n,i, sum=0;
		Scanner sc =new Scanner(System.in);
		System.out.println("Enter the rang: -");
		n=sc.nextInt();
		i=1;
		while(i<=n)
		{
			int c=i*i;
			System.out.print(c +" + ");
			sum=sum+c;
			i++;
		}

		System.out.print("\n Sum="+sum);
		}
		}


